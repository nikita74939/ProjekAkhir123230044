<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="400" style="-fx-background-image: url('/assets/images/background.jpg'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.HomePageController">

    <!-- Kiri Atas: Nama & Level -->
    <VBox layoutX="20" layoutY="20" spacing="5">
        <Label fx:id="labelNama" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Niki" />
        <Label fx:id="labelLevel" style="-fx-text-fill: white;" text="Level 5" />
    </VBox>

    <!-- Kanan Atas: Gold, Toko, Misi -->
    <VBox alignment="TOP_RIGHT" layoutX="280" layoutY="20" spacing="10">
        <Label fx:id="labelGold" style="-fx-text-fill: gold; -fx-font-size: 18px; -fx-font-weight: bold;" text="Gold: 1234" />
        <Button fx:id="btnToko" prefWidth="100" text="Toko" />
        <Button fx:id="btnMisi" prefWidth="100" text="Misi" />
    </VBox>

    <!-- Tengah: Pet yang sedang dirawat -->
    <StackPane layoutX="100" layoutY="120" prefHeight="200" prefWidth="200" />

    <!-- Tombol Ganti Pet -->
    <Button fx:id="btnPrevPet" layoutX="24.0" layoutY="350.0" prefWidth="30" text="&lt;" />
    <Button fx:id="btnNextPet" layoutX="340.0" layoutY="350.0" prefWidth="30" text="&gt;" />

    <!-- Bawah: Tombol Food, Play, Logout -->
    <HBox layoutX="45.0" layoutY="536.0" spacing="20">
        <Button fx:id="btnFood" prefHeight="40" prefWidth="90" text="Food" />
        <Button fx:id="btnPlay" prefHeight="40" prefWidth="90" text="Play Toys" />
        <Button fx:id="btnLogout" prefHeight="40" prefWidth="90" text="Logout" />
    </HBox>
     <ImageView fx:id="imgPet" fitHeight="264.0" fitWidth="248.0" layoutX="76.0" layoutY="251.0" />

</AnchorPane>
